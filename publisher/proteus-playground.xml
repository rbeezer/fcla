<!-- Publisher file for Runestone Academy version  -->
<!-- w/ @platform, no analytics/search             -->

<publication>

    <source>
        <!-- Version is for PROTEUS research study only, hosted on Runestone-->
        <!-- Includes "new" interactive Runestone/PROTEUS reading questions -->
        <!-- Includes trial "playground" questions in development           -->
        <!-- Excludes old FCLA RQ for sections without PROTEUS questions    -->
        <!-- See "proteus-local" publisher file for more version info       -->
        <!-- NB: technically, we need an early/late distinction here, but   -->
        <!-- we used early/proteus to control the "document-id" inside      -->
        <!-- "docinfo" and a Runestone build rightly fails when it sees     -->
        <!-- two document-id.  So in one place there will be two "xref"     -->
        <!-- and one of them is wrong                                       -->
        <version include="proteus-playground"/>
        <directories external="ext" generated="gen"/>
    </source>

    <common>
        <!-- Sections are the fundamental divisions -->
        <!-- "Subchapters" in Runestone-speak       -->
        <tableofcontents level="2"/>
    </common>

    <!-- perhaps these numberings have no effect -->
    <numbering>
        <divisions level="3"/>
        <blocks    level="2"/>
        <equations level="1"/>
        <footnotes level="0"/>
    </numbering>

    <html>
        <!-- "example" are knowled by default, being explicit     -->
        <!-- A "computation" is controlled by the "remark" knowl  -->
        <!-- switch (for historical reasons) and may change       -->
        <knowl example="yes" remark="yes"/>
        <!-- "salem" theme accomodates wide Runestone widgets -->
        <css theme="salem"/>
        <index-page ref="front-matter"/>
        <platform host="runestone"/>
    </html>

</publication>
