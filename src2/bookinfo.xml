<docinfo  xmlns:xi="http://www.w3.org/2001/XInclude">

    <!-- tikz package and libraries for images -->
    <latex-image-preamble>
    \usepackage{tikz}
    \usetikzlibrary{backgrounds}
    \usetikzlibrary{arrows,matrix}
    \usetikzlibrary{snakes}
    </latex-image-preamble>

    <!-- provide links to SVG and PDF versions of diagrams -->
    <!-- TODO: add PDFs once build is scripted -->
    <images>
        <archive>svg</archive>
    </images>

    <!-- clickable image in upper-left of HTML version -->
    <brandlogo url="http://linear.pugetsound.edu" source="cover-84x120.png" />

    <initialism>FCLA</initialism>

    <!-- Identify text uniquely -->
    <!-- This matches what Runestone has been using, so allowing for     -->
    <!-- continuity there.  A move to Edition 4, with early and late     -->
    <!-- determinant versions, may mean changes (under version support). -->
    <document-id component="early" edition="3">fcla</document-id>
    <document-id component="proteus" edition="3">fcla-proteus</document-id>
    <document-id component="proteus-playground" edition="3">fcla-proteus-playground</document-id>

    <cross-references text="type-global" />

    <!-- AMS-LaTeX style macros -->
    <xi:include href="./macros.xml" />

    <!-- We generally try to discourage renaming elements,        -->
    <!-- but FCLA has a long history, pre-PreTeXt, so some        -->
    <!-- are unavoidable.  Note that these are language specific. -->

    <!-- Appropriate unused "computation" element for Sage advice vignettes -->
    <rename element="computation" xml:lang="en-US">Sage</rename>
    <!-- We only reference list items as "properties" of major theorems/defns -->
    <rename element="li" xml:lang="en-US">Property</rename>

    <!-- NB: The non-standard Archetypes ("archetype") and Proof        -->
    <!-- Techniques ("technique") get named via extra FCLA-specific XSL -->

</docinfo>
